@model Products
@{
    ViewData["Title"] = "Add";
}

<h1>Add Product</h1>

<a href="/Product/DisplayAll" class="my-2 btn btn-primary">Display All</a>

<form asp-action="Add">
    <div class="mb-3">
        <label asp-for="ProductName" class="form-label">Product Name</label>
        <input asp-for="ProductName" type="text" class="form-control">
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" type="text" class="form-control">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="text" class="form-control">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

 
    @if (TempData["msg"] != null)
    {
        <div class="mb-3">
            @TempData["msg"]
        </div>
    }

    <div class="mb-3">
        <button type="Submit" class="btn btn-primary">Save</button>
    </div>
    

</form>