@using Product.Data.Models.Domain
@model IEnumerable<Products>
@{

}

<h3> Products List </h3>
<div class="my-2">
    <a href="/Product/Add" class="btn btn-primary my-2">New Product</a>
    <table class="table table-bordered">

        <thead>
            <tr>
                <th>SN</th>
                <th>ProductName</th>
                <th>Description</th>
                <th>Price</th>
                <th>CreatedAt</th>
                <th>CreatedAt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>@product.CreatedAt</td>
                    <td>
                        <a href="/Product/Edit?id=@product.Id" class="btn btn-warning">Edit</a>
                        <a href="/Product/Delete?id=@product.Id" onclick="return window.confirm('Are you sure to delete this record')" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>